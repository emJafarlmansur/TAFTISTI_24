<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/pairTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pair"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:elevation="5dp"
        android:src="@drawable/cwbtc"
        android:layout_gravity="center"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <!-- Coin Pair TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/primeryMarketTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indodax"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/primeryPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/scmarketTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokocrypto"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/scmarketPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/trmarketTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upbit"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/trmarketPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/frmarketTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luno"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/frmarketPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/fevmarketTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekeningku"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fevmarketPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="14sp"
                android:paddingBottom="4dp" />
        </LinearLayout>

</LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
